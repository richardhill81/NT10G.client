<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/webtest_listView_webName"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/webtest_btn_addDomainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"/>
        <Button
            android:id="@+id/webtest_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"/>
        <Button
            android:id="@+id/webtest_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"/>
    </LinearLayout>

    <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/viewPager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</android.support.v4.view.ViewPager>-->

    <LinearLayout
        android:id="@+id/ll_webTest_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tab_webtest_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:text="tab1"
            android:singleLine="true"
            android:visibility="invisible"
            android:background="@drawable/shape_textview_border_white"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tab_webtest_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_textview_border_white"
            android:layout_marginLeft="2dp"
            android:text="tab2"
            android:singleLine="true"
            android:visibility="invisible"
            android:textSize="14sp"
            android:textColor="#999494"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tab_webtest_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/shape_textview_border_white"
            android:gravity="center_horizontal"
            android:text="tab3"
            android:singleLine="true"
            android:visibility="invisible"
            android:textSize="14sp"
            android:textColor="#999494"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tab_webtest_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:background="@drawable/shape_textview_border_white"
            android:text="tab4"
            android:singleLine="true"
            android:visibility="invisible"
            android:textSize="14sp"
            android:textColor="#999494"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tab_webtest_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/shape_textview_border_white"
            android:visibility="invisible"
            android:text="tab5"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="#999494"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_webtest_showResult"
        android:visibility="invisible"
        android:layout_margin="10dp"
        android:background="#6d6d6d"
        android:divider="#00000000"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>
