<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/llyt_showMemory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff336699"
            android:textSize="18sp"
            android:text="可用空间/总空间："/>
        <TextView
            android:id="@+id/fileManager_textView_showSpace"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#ff336699"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_showFile"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/llyt_showMemory"
        android:layout_above="@id/rl_btns"
        android:layout_height="wrap_content">

        <ExpandableListView
            android:id="@+id/fileManager_expandableListView_showFile"
            android:layout_width="match_parent"
            android:indicatorLeft="@null"
            android:layout_height="wrap_content">
        </ExpandableListView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btns"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/fileManager_bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ff336699"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="删除"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/fileManager_bt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ff336699"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="返回"
                android:textSize="20dp"/>

        </LinearLayout>
    </RelativeLayout>






</RelativeLayout>
