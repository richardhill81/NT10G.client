<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/flyt_speedwheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/container_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_speedinfo" />
        <ImageView
            android:id="@+id/speedwheel_img_needle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_needle" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/speedwheel_textview_blank"
                android:layout_width="wrap_content"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/speedwheel_textview_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/speedwheel_textview_blank"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp"
                android:text="正在测试"/>
            <TextView
                android:id="@+id/speedwheel_textview_speed"
                android:text="10000M"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/speedwheel_textview_state"
                android:gravity="center"
                />
        </RelativeLayout>
    </FrameLayout>
    <Button
        android:id="@+id/speedwheel_button_close"
        android:text="关闭"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/flyt_speedwheel"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>